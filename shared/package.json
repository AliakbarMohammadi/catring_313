{
  "name": "@tadbir-khowan/shared",
  "version": "1.0.0",
  "description": "Shared utilities and configurations for Tadbir Khowan system",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:models": "node scripts/testModels.js",
    "test:system": "node scripts/systemTest.js",
    "migrate": "node scripts/migrate.js",
    "migrate:up": "node scripts/migrate.js up",
    "migrate:down": "node scripts/migrate.js down",
    "migrate:status": "node scripts/migrate.js status",
    "migrate:reset": "CONFIRM_RESET=true node scripts/migrate.js reset",
    "seed": "node scripts/seed.js seed",
    "seed:test": "node scripts/seed.js seed test",
    "seed:clear": "node scripts/seed.js clear",
    "seed:reset": "node scripts/seed.js reset",
    "seed:dev": "node scripts/seedData.js",
    "db:setup": "npm run migrate:up && npm run seed",
    "db:reset": "npm run migrate:reset && npm run seed",
    "db:test": "npm run test:models",
    "system:test": "npm run test:system",
    "system:setup": "npm run db:setup && npm run test:system",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix"
  },
  "dependencies": {
    "@faker-js/faker": "^8.3.1",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.0",
    "sqlite3": "^5.1.7",
    "umzug": "^3.6.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@types/jest": "^29.5.8",
    "babel-jest": "^29.7.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    },
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.property.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/migrations/**",
      "!**/scripts/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "catering",
    "food-ordering",
    "microservices",
    "nodejs",
    "postgresql",
    "redis"
  ],
  "author": "Tadbir Khowan Team",
  "license": "MIT"
}
