# ===========================================
# تنظیمات محیطی پروژه تدبیرخوان
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://tadbir_user:your_secure_password@localhost:5432/tadbir_khowan
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Environment
NODE_ENV=development

# Email Configuration (برای سرویس اعلان‌رسانی)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS Configuration (برای سرویس اعلان‌رسانی)
SMS_API_KEY=your_sms_provider_api_key
SMS_API_URL=https://api.sms-provider.com

# Payment Gateway (برای سرویس پرداخت)
PAYMENT_GATEWAY_URL=https://your-payment-gateway.com
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# Frontend Configuration
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=تدبیرخوان

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_key

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# SSL (برای production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Monitoring (اختیاری)
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090