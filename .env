# تنظیمات محیطی پروژه تدبیرخوان
# ===========================================

# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:./database.sqlite
REDIS_URL=memory://localhost

# JWT Configuration
JWT_SECRET=tadbir_khowan_super_secret_jwt_key_for_development_only_2024
JWT_EXPIRES_IN=24h

# Encryption
ENCRYPTION_KEY=tadbir_khowan_encryption_key_32ch

# Environment
NODE_ENV=development

# Email Configuration (برای سرویس اعلان‌رسانی)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASS=test_password

# SMS Configuration (برای سرویس اعلان‌رسانی)
SMS_API_KEY=test_sms_api_key
SMS_API_URL=https://api.sms-provider.com

# Payment Gateway (برای سرویس پرداخت)
PAYMENT_GATEWAY_URL=https://sandbox-payment-gateway.com
PAYMENT_GATEWAY_KEY=test_payment_key
PAYMENT_GATEWAY_SECRET=test_payment_secret

# Frontend Configuration
VITE_API_URL=http://localhost:3000
VITE_APP_NAME=تدبیرخوان

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=tadbir_khowan_session_secret_key

# File Upload
MAX_FILE_SIZE=5MB
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000

# SSL (برای production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# Monitoring (اختیاری)
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090