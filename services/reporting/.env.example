# پیکربندی سرور
PORT=3008
NODE_ENV=development

# پیکربندی پایگاه داده
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tadbir_reporting
DB_USER=postgres
DB_PASSWORD=password

# پیکربندی Redis (برای کش و session)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# پیکربندی لاگ‌گیری
LOG_LEVEL=INFO

# پیکربندی کش
CACHE_TTL=3600
ENABLE_CACHE=true

# پیکربندی عملکرد
MAX_REPORT_RANGE_DAYS=180
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100